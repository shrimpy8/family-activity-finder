# Anthropic API Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Server Configuration
PORT=3001

# Debug Configuration
# Set to 'true' to enable verbose debug logging (full Claude responses, detailed parsing logs)
# Set to 'false' or omit for cleaner production logs (default behavior)
# Useful for debugging parsing issues or inspecting Claude's raw responses
DEBUG_LOGGING=false

# Perplexity API Key
PERPLEXITY_API_KEY=your-perplexity-key-here


# Gemini API Key
GOOGLE_API_KEY=your-gemini-key-here
# Output Format Configuration
# Set to 'MARKDOWN' (default) or 'JSON' for all AI providers
OUTPUT_FORMAT=MARKDOWN

# Model Display Names (for UI display)
# These are the friendly names shown to users in the interface
ANTHROPIC_MODEL_NAME=Claude Sonnet 4.5
PERPLEXITY_MODEL_NAME=Perplexity Sonar
GEMINI_MODEL_NAME=Gemini 2.5 Flash

# API Model Names (actual model identifiers used in API calls)
# These are the technical model names used when making API requests
ANTHROPIC_API_MODEL=claude-sonnet-4-5-20250929
PERPLEXITY_API_MODEL=sonar
GEMINI_API_MODEL=gemini-2.5-flash
